/**
 *
 * @author Ace
 */
public class Lab2HelloHomework {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        
        
        String myName = "Yang";
        String interesting = "a vegan butcher";
        String school = "Arbroath";
        String home = "Suzhou";
        int age = 33;
        int studentId = 987654321;
        
        // define if the person is male or female
        boolean female = true;
        
        
        // 2 variables to define he/she, his/her
        String gender1;
        String gender2;
        // checks gender and assigns values to variables
        if(female==true){
            gender1 = "she";
            gender2 = "her";
        }
        else{
            gender1 = "he";
            gender2 = "his";
        }
        
        // System.out.print("Hello World");
        System.out.println("Hello "+ myName);
        System.out.println(gender1+ " is "+ myName + ", and "+gender1+ " is "+ interesting);
        System.out.println(gender2+ " name is "+ myName + ", " + gender2 + " school was "+ school + ", and "+gender2+" hometown is  "+ home + ".");
        System.out.println("Name: "+ myName + ", Age:  "+ age + ", Student number:  "+ studentId);
    }

}





